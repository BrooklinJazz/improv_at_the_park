<!-- Hero Section -->
<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-50 py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h1 class="text-5xl md:text-7xl font-serif text-green-800 mb-6">Workshop Tools</h1>
      <p class="text-xl text-green-700 max-w-3xl mx-auto font-light">
        Generate characters, scenes, and prompts for your improv workshops
      </p>
    </div>
    
<!-- Tools Grid -->
    <div class="grid lg:grid-cols-2 gap-12">
      
<!-- Character Generator -->
      <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 shadow-xl border border-green-200/50">
        <div class="text-center mb-8">
          <div class="bg-gradient-to-br from-green-100 to-emerald-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
            <span class="text-2xl">ğŸ­</span>
          </div>
          <h2 class="text-3xl font-serif text-green-800 mb-2">Character Generator</h2>
          <p class="text-green-600">Create unique characters for your scenes</p>
        </div>
        
<!-- Character Image -->
        <div class="mb-6">
          <h3 class="text-lg font-semibold text-green-800 mb-3">Character Image</h3>
          <div class="bg-green-50 rounded-2xl p-4 border border-green-200">
            <%= if @character_image do %>
              <img
                src={@character_image}
                alt="Generated Character"
                class="w-full h-64 object-cover rounded-xl"
              />
            <% else %>
              <div class="w-full h-64 bg-green-100 rounded-xl flex items-center justify-center">
                <span class="text-green-600 text-lg">Click to generate character image</span>
              </div>
            <% end %>
          </div>
          <button
            phx-click="generate-character-image"
            class="w-full mt-3 bg-green-100 text-green-800 px-4 py-2 rounded-xl hover:bg-green-200 transition-colors font-medium"
          >
            ğŸ¨ Generate Image
          </button>
        </div>
        
<!-- Character Description -->
        <div>
          <h3 class="text-lg font-semibold text-green-800 mb-3">Character Description</h3>
          <div class="bg-green-50 rounded-2xl p-4 border border-green-200 min-h-24">
            <%= if @character_description do %>
              <p class="text-green-800 font-medium">{@character_description}</p>
            <% else %>
              <p class="text-green-600">Click to generate character description</p>
            <% end %>
          </div>
          <button
            phx-click="generate-character-description"
            class="w-full mt-3 bg-green-100 text-green-800 px-4 py-2 rounded-xl hover:bg-green-200 transition-colors font-medium"
          >
            âœï¸ Generate Description
          </button>
        </div>
      </div>
      
<!-- Scene Prompt Generator -->
      <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 shadow-xl border border-green-200/50">
        <div class="text-center mb-8">
          <div class="bg-gradient-to-br from-emerald-100 to-teal-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
            <span class="text-2xl">ğŸ¬</span>
          </div>
          <h2 class="text-3xl font-serif text-green-800 mb-2">Scene Prompts</h2>
          <p class="text-green-600">Generate random scene elements</p>
        </div>
        
<!-- Location -->
        <div class="mb-6">
          <h3 class="text-lg font-semibold text-green-800 mb-3">ğŸ“ Location</h3>
          <div class="bg-emerald-50 rounded-2xl p-4 border border-emerald-200 min-h-16">
            <%= if @scene_prompt.location do %>
              <p class="text-green-800 font-medium">{@scene_prompt.location}</p>
            <% else %>
              <p class="text-green-600">Click to generate location</p>
            <% end %>
          </div>
        </div>
        
<!-- Relationship -->
        <div class="mb-6">
          <h3 class="text-lg font-semibold text-green-800 mb-3">ğŸ‘¥ Relationship</h3>
          <div class="bg-emerald-50 rounded-2xl p-4 border border-emerald-200 min-h-16">
            <%= if @scene_prompt.relationship do %>
              <p class="text-green-800 font-medium">{@scene_prompt.relationship}</p>
            <% else %>
              <p class="text-green-600">Click to generate relationship</p>
            <% end %>
          </div>
        </div>
        
<!-- Word -->
        <div class="mb-6">
          <h3 class="text-lg font-semibold text-green-800 mb-3">ğŸ”¤ Word</h3>
          <div class="bg-emerald-50 rounded-2xl p-4 border border-emerald-200 min-h-16">
            <%= if @scene_prompt.word do %>
              <p class="text-green-800 font-medium text-xl">{@scene_prompt.word}</p>
            <% else %>
              <p class="text-green-600">Click to generate word</p>
            <% end %>
          </div>
        </div>
        
<!-- Generate All Button -->
        <button
          phx-click="generate-scene-prompt"
          class="w-full bg-gradient-to-r from-emerald-500 to-teal-500 text-white px-6 py-3 rounded-xl hover:from-emerald-600 hover:to-teal-600 transition-all transform hover:scale-105 shadow-lg font-semibold"
        >
          ğŸ² Generate All Scene Elements
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Footer -->
<footer class="bg-green-800 text-green-100 py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center gap-4 mb-6 md:mb-0 justify-between">
      <div class="bg-white rounded-full p-2 shadow-sm">
        <img src="/images/ImprovAtTheParkLogo.png" alt="Improv at the Park" class="h-12 w-auto" />
      </div>
      <span class="text-xl font-serif">Improv at the Park</span>
    </div>
  </div>
</footer>
